    <textarea name="content" rows="8" cols="80"></textarea>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  <p>Other people's reason:</p>

  <% id.forEach(id => { %>
       <%= id.item %><br>

  <% }) %>

</div>
